// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                String        @db.VarChar(255)  @id @default(uuid())
  username          String        @db.VarChar(512)  @unique
  password          String        @db.VarChar(512)  @unique
  max_chat_limit    Int           @db.Integer()     @default(10) 
  chats             Chat[]      
  chatSenders       String[]     
}



model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model Chat {
  id                String        @db.VarChar(255)  @id @default(uuid())
  text              String        @db.VarChar(2047)
  sender            String        @db.VarChar(512)
  recipient         User          @relation(references: [id], fields: [recipientID])
  recipientID       String        @db.VarChar(255)
}